blue = #2376AE
yellow  = #FEFF00
purple = #C16ECF
black = #323232
@import '_normalize'
@import '_typography'

body
  font-family sans-serif
  background-attachment fixed 
  -webkit-font-smoothing: antialiased;
  background-image: linear-gradient(-170deg, blue 0%, purple 100%);
  &:before
    // HOT TIP: do this on the before element so it doesn't span 100% content height on mobile
    background-image: linear-gradient(-170deg, blue 0%, purple 100%);
    content : ''
    display block
    position fixed
    top 0 
    left 0
    right 0
    bottom 0
    z-index -1

  
h1,h2,h3,h4,h5, h6
  font-weight normal
  margin 0

html
  font-size 10px

h1
  font-size 5rem

a
  cursor pointer

p
  font-size 1.8rem
  color white
  a
    color white
    text-decoration none
    transition all 0.2s
    position relative
    color black

p a, h3
  position relative
  display inline-block
  margin 0 auto
  color white
  z-index 1
  &:before
    content: '';
    background: rgba(0,0,0,0.2);
    display: inline-block;
    position: absolute;
    left: -2.5%;
    padding: 1.5rem;
    right: 0;
    z-index: -1;
    break-inside: avoid;
    transition: all 0.1s;
    transform: rotate(-1deg) skew(10deg);
  &:nth-of-type(3n+1)
    &:hover:before
      transform rotate(-1deg) skew(-5deg)
    &:before
      transform rotate(1deg) skew(5deg)
  &:nth-of-type(3n+2)
    &:hover:before
      transform rotate(1deg) skew(7deg)
    &:before
      transform rotate(-1deg) skew(-7deg)
  &:nth-of-type(3n)
    &:hover:before
      transform rotate(-1deg) skew(-10deg)
    &:before
      transform rotate(1deg) skew(10deg)

img
  max-width 100%
  
h1
  text-transform uppercase
  letter-spacing 1px
  text-shadow 2px 2px 0 darken(blue, 20%), 0 0 10rem rgba(255, 255, 255, 0.4)
  transform: rotate(-10deg);
  font-size 170px
  text-shadow: 10px 10px 0px rgba(0,0,0,0.17);
  margin -50px 0 -50px 0
  padding 0
  // transition all 0.1s
  span
    display block
    &.flexbox
      color yellow
      position: relative;
      transform: translateX(.5%);
  a
    color white
    text-decoration none
    padding 10px

.desc
  font-size 22px
  line-height 1.6
  letter-spacing 1px
  text-shadow 2px 2px 0 darken(blue, 20%)
  // text-transform uppercase

header.top
  border-top 1rem solid darken(blue, 20%)
  text-align center
  // background-attachment fixed
  color white
  padding 2rem
  transition all 0.1s
  position relative
  overflow hidden

.scaler
  width 100%
  position relative
  padding-bottom: 56.25%
  iframe
    width 100%
    height 100%
    position absolute
    top 0 
    bottom 0 
    right 0 
    left 0

grey = #CBCBCB

.videos
  display flex
  flex-wrap wrap
  margin 50px 0 
  border-radius 3px
  border 1px solid grey
  width 100%

.video
  flex 1
  display flex
  flex-basis 50%
  width 100%
  background white
  border-right 1px solid grey
  &:last-child a
    border-bottom 0
  p
    margin 0
    clear both
    color black
    font-size 15px
  span.video-number
    padding 10px
    font-size 15px
    flex-basis 50px
    text-align center
    align-self center
    color darken(grey,30%)
    font-weight 100
  a
    border-bottom 1px solid grey
    border-left 1px solid grey
    padding 30px
    flex 1
    cursor pointer
  img
    float left
    margin-right 10px
    margin-bottom 10px
    width: 200px;
    height: auto;
  h2
    color black
    font-size 17px
    line-height: 1.6;
    margin-top: -2px;
    font-family 'Oswald'
    text-transform uppercase
    letter-spacing 1px
    .duration
      font-size 10px
      background lighten(grey ,70%)
      padding 2px 5px
      position relative
      top -3px
      margin-left 5px
      color:rgba(0,0,0,0.5)
      border-radius 4px
    
.video-details
  background rgba(0,0,0,0.2)
  padding 20px
  margin-bottom 20px
  color white
  h2
    font-size 30px
  p
    font-size 15px
    margin-bottom 0


.about
  padding 3rem 0
  overflow hidden
  max-width 1200px
  margin 0 auto
  display flex
  flex-wrap wrap
  .half
    flex-basis 50%
    &:first-of-type
      padding-right 20px
    &:last-of-type
      padding-left 20px
        
  p
    line-height 1.8
    margin-top 0
    color white
  h3
    font-size 25px
    &:before
      bottom -5px
      padding 2rem
  img
    display block
    margin 0 auto
    width 100px
    float left
    margin-right 2rem
    border-radius 50%

.examples, .the-videos
  text-align center
  clear both

.example-figures
  margin 0 auto
  max-width 1200px
  // display flex
  clear both
  // align-items center
  figure 
    // flex-baiss 33.33%
    width:calc(33.33% - 40px);
    float left
    margin:20px
    padding:10px
    border-radius 4px
    background rgba(0,0,0,0.2)
    text-align center
    font-size 15px
    color white
  figcaption
    padding-top 5px
h3
  text-align center
  text-transform uppercase
  margin-bottom 2rem

.video-title
  font-size 1.5rem
  margin 0
  text-transform uppercase
  counter-increment video
  text-align left
  &:before
    counter(video, decimal-leading-zero)

.video
  p
    margin-top 0
    line-height 1.8


section.deets
  text-align center
  // border-bottom 1px solid blue
  background darken(white, 3%)
  // margin-bottom 4rem
  overflow hidden
  padding-top 5rem
  padding-bottom 1rem
  &.secondary
    padding-top 2rem
  p
    font-size 3rem
    max-width 80rem
    margin 0 auto
    line-height 1.5
    &.naw
      font-size 14px
      clear both
      padding-top 1rem


.signup
  max-width 60rem
  margin 2rem auto 1rem auto
  overflow hidden
  background rgba(0,0,0,0.2)
  padding:20px;
  border-radius 5px
  box-shadow inset 0 0 2px rgba(0,0,0,0.2)
  p
    margin 0
    padding-top 20px
    clear both
    font-size 16px
  input
    background white
    line-height 2
    padding 1rem
    font-size 2rem
    border 0
    outline 0
    float left
    &[type="email"]
      width 60%
    &[type="submit"]
      width 40%
      background yellow
      color alpha(black, 0.9)

section.social
  text-align center
  padding 2rem
  // border-bottom 1px solid lighten(grey, 90%)
  margin-bottom 2rem
  .fb-like
    position relative
    top -3px
    margin-right: 4rem;
    margin-left: 3rem;
  #___plusone_0
    position relative
    top 1px
  #twitter-widget-0
    margin-left 3rem


p.desc.success
  font-size 2rem
  text-align center
  padding-left 1rem
  background rgba(0,0,0,0.2)
  padding:20px;
  border-radius 5px
  box-shadow inset 0 0 2px rgba(0,0,0,0.2)

.deets
  background yellow

.twitter-tweet
  display inline-block !important
  margin 4rem 1rem 0 !important

.watch-wrap
  display flex
  justify-content center

#watch
  max-width 1200px
  background rgba(0,0,0,0.2)
  padding 50px
  border-radius 4px

footer
  text-align center
  color white
  font-size 15px
  padding:20px
  a
    color white
    padding 10px
    text-decoration none

.underline
  border-bottom 2px solid yellow
  display inline-block
  margin 0 auto
  padding-bottom 10px
  display none
  max-width 800px

.prev-and-next
  display flex
  justify-content space-between
  margin-top 1rem
  a
    text-decoration none
    background rgba(0,0,0,0.1)
    color white
    font-size 1.5rem
    padding 1rem
    max-width 49%
    

@media all and (max-width:1200px)
  #watch
    padding 20px
    
  .about
    padding 20px

@media all and (max-width:1000px)
  ul.video-list
    padding 1rem
    li
      &:nth-child(1n)
        width 32.5%
        margin-right 1.25%
      &:nth-child(3n+3)
        margin-right 0

@media all and (max-width:850px)
  h1
    font-size 100px
  section.deets
    p.desc
      font-size 2rem
  .signup
    input
      font-size 1.3rem
      padding 0.5rem

@media all and (max-width:760px)
  .video
    flex-basis 100%
  h1
    font-size 50px
    
  .about
    .half
      flex-basis 100%
      margin 10px 0
      padding 0 !important

@media all and (max-width:480px)
  .video
    a
      padding 15px
  
  .example-figures
    figure
      margin 5px 5px 20px 5px

@media all and (max-width:420px)
  .signup
    input[type]
      width 100%
      text-align center
      &:first-of-type
        margin-bottom 5px


